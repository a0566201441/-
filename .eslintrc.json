{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "Chart": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-alert": "off",
    "no-console": "off",
    "prefer-const": "warn",
    "eqeqeq": [
      "warn",
      "smart"
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "**/*.min.js"
  ]
}